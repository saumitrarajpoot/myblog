doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstraps/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstraps/bootstrap-theme.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/signin_signup.css')
    link(rel='stylesheet', href='/stylesheets/blogs.css')
    script(src='/javascripts/jquery-2.1.1.min.js')
    script(src='/javascripts/bootstraps/bootstrap.min.js')
  body
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container-fluid
          //
             Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle.collapsed(data-target='#bs-example-navbar-collapse-1', data-toggle='collapse', type='button')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Blog
          //
             Collect the nav links, forms, and other content for toggling
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              if !isAuthenticated
                li
                  a(href='#') Blogs
              else
                li.dropdown
                  a.dropdown-toggle(data-toggle='dropdown', href='#')
                    | Blogs
                    span.caret
                  ul.dropdown-menu(role='menu')
                    li
                      a(href='/blogs/new') New blog
            ul.nav.navbar-nav.navbar-right
              if !isAuthenticated
                li
                  a(href='/users/signin') Singin
                li
                  a(href='/users/signup') Signup
              else
                li
                  a(href='javascript:void(0);') #{currentUser.username}
                li
                  a(href='/users/signout') Sing out

          include flash
    block content
