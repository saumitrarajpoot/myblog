extends ../layout/layout

block content
  .row
    .col-lg-1
    .col-lg-10
      br
      .row
        .col-lg-1
        .col-lg-10
          h3 New Blog
          .clear
          .bdr
          - if (errors && errors.length > 0)
            - each error in errors
              .row.errors
                .col-lg-2
                .col-lg-10
                  = error.msg
            .clear
          form(action='/blogs/create', method='post')
            input(type="hidden", name="_csrf", value="#{csrfToken}")
            .clear
            .row
              .col-lg-2 Title
              .col-lg-10
                input(type='text', name='title', placeholder='title', class='form-control')
            .clear
            .row
              .col-lg-2 Content
              .col-lg-10
                textarea(name='content', rows="4", cols="85", placeholder='Content type here')
            .clear
            .row
              .col-lg-2
              .col-lg-2
                input(type='submit', name='create_blog' value="Submit", autocomplete='off', class='btn btn-primary form-control')
              .col-lg-2
          .clear
          .bdr
        .col-lg-1
    .col-lg-1

