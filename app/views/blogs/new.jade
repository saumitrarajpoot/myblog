extends ../layout/layout

block content
  .row
    .col-lg-1
    .col-lg-10
      br
      .row
        .col-lg-1
        .col-lg-10
          h3 New Blog
          .clear
          .bdr
          form(action='/blogs/create', method='post')
            .clear
            - if (errors && errors.length > 0)
              .row
                .col-lg-2 &nbsp;
                .col-lg-9.errors.alert.alert-danger
                  - each error in errors
                    = error
                    br
              .clear
            input(type="hidden", name="_csrf", value="#{csrfToken}")
            .clear
            .row
              .col-lg-2 Title
              .col-lg-10
                input(type='text', name='title', placeholder='title', class='form-control')
            .clear
            .row
              .col-lg-2 Content
              .col-lg-10
                textarea.blg-textarea(name='content', rows="4", cols="85", placeholder='Content type here')
            .clear
            .row
              .col-lg-2
              .col-lg-2
                input(type='submit', name='create_blog' value="Create Blog", autocomplete='off', class='btn btn-primary form-control')
              .col-lg-2
          .clear
          .bdr
        .col-lg-1
    .col-lg-1

